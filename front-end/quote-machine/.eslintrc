{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "parserOptions": {
        "project": "./jsconfig.json",
        "ecmaVersion": 2021,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "extends": [
        "airbnb",
        "airbnb/hooks",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "react/jsx-filename-extension": "off",
        "react/prop-types": "off",
        "no-console": "warn",
        "prettier/prettier": "off"
    }
}